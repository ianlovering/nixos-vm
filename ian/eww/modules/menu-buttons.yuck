
(defwidget menu-buttons []
  (box
    :space-evenly false
    :spacing 10
    :class "centre-mod"
    :style "font-size: 1.5rem;"
    (button
      :onclick "wofi -f --show drun -I"
      (label
        :class "menu-button"
        :text "󰍜"))
    (button
      :onclick "${EWW_CMD} open --toggle help" 
      (label
        :class "help-button"
        :text "󱜹"))
))

